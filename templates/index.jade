doctype html
html(ng-app="app")
  head
    title Dive Sites
    link(rel="stylesheet" href="main.css")
  body(ng-controller="AdminCtrl")
    nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
      .container
        button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#adminMenu")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar 
        a.navbar-brand(href="#" ng-click="showMain()") Younderwater Admin
        .collapse.navbar-collapse#adminMenu
          ul.nav.navbar-nav
            li(ng-class="{active: isActive('Locations')}")
              a(href="#/locations") Locations
            li(ng-class="{active: isActive('Sites')}")
              a(href="#/sites") Dive Sites 
    
      .current-spot
        .container-fluid(ng-show="!isActive('')")
          .container
            h3 {{getTitle()}}
              
      .main-content
        .container-fluid
          .container  
            div(ng-view)
        
  
    script(src="bundle.js")  
      
    
